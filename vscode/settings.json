{
  "workbench.panel.defaultLocation": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.list.multiSelectModifier": "ctrlCmd",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 20,
  "workbench.list.smoothScrolling": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 5,
  "workbench.colorTheme": "Tomorrow Night Blue",
  "window.openFilesInNewWindow": "on",
  "window.closeWhenEmpty": true,
  "window.restoreFullscreen": true,
  // EDITOR APPEARANCE SETTINGS - EDITOR
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.wordWrap": "bounded",
  "editor.tabCompletion": "on",
  "editor.suggest.shareSuggestSelections": true,
  // FILE FORMATING SETTINGS
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "editor.formatOnPaste": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // SETTINGS SYNC SETTINGS
  "sync.gist": "a4bfc2a1ce736b5ee03cfd930deb0ea1",
  "sync.forceDownload": false,
  "sync.quietSync": true,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  // GIT SETTINGS
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.defaultCloneDirectory": "~/dev/repos",
  "git.promptToSaveFilesBeforeCommit": true,
  "git.confirmSync": false,
  "scm.defaultViewMode": "tree",
  "scm.inputFontFamily": "editor",
  // PRETTIER SETTINGS
  "prettier.tabWidth": 2,
  "prettier.arrowParens": "always",
  "prettier.singleQuote": true,
  // STYLE LINTER SETTINGS: Stylelint Handles it
  // "prettier.disableLanguages": ["vue", "scss", "css"],
  // "scss.validate": false,
  // "css.validate": false,
  // "less.validate": false,
  // PLUGIN SETTINGS
  // "scss.scannerExclude": [
  //   "**/.git",
  //   "**/node_modules/!(gazelle-design-system)",
  //   "**/bower_components"
  // ],
  "indentRainbow.updateDelay": 10,
  "npm.enableScriptExplorer": true,
  "npm.packageManager": "yarn",
  "color-highlight.matchWords": true,
  "yarn.runInTerminal": true,
  "emmet.includeLanguages": {
    "ftl": "html"
  },
  "npm.scriptExplorerAction": "run",
  "explorer.confirmDragAndDrop": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.host": "localhost",
  "python.jediEnabled": false,
  "python.pythonPath": "/usr/local/bin/python3",
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.formatting.provider": "none",
  "material-icon-theme.hidesExplorerArrows": false,
  "markdown.extension.toc.updateOnSave": false,
  "markdown.extension.tableFormatter.enabled": false,
  "markdown.extension.italic.indicator": "_",
  "markdown.extension.toc.unorderedList.marker": "*",
  "explorer.confirmDelete": false,
  "git.ignoreMissingGitWarning": true,
  "openInGitHub.providerType": "github",
  "git.path": "/usr/local/bin/git",
  "workbench.tree.renderIndentGuides": "always",
  "stylefmt.showErrorMessages": false,
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "all",
  "files.autoGuessEncoding": true,
  "workbench.tips.enabled": false,
  "workbench.editor.closeOnFileDelete": true,
  "terminal.integrated.fontSize": 14,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "terminal.integrated.letterSpacing": 1,
  "terminal.integrated.lineHeight": 1.125,
  "debug.console.fontSize": 14,
  "zenMode.hideTabs": false,
  "zenMode.centerLayout": false,
  "emmet.triggerExpansionOnTab": true,
  "diffEditor.renderSideBySide": false,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // THEME CUSTOMIZATIONS
  "workbench.colorCustomizations": {
    "panel.background": "#001c40",
    "tab.activeBackground": "#264769",
    "tab.activeBorder": "#ffeead",
    "panelTitle.activeBorder": "#ffeead",
    "panel.border": "#ffeead"
  },
  // https://github.com/wesbos/cobalt2-vscode/issues/116
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic
          "comment",
          "emphasis",
          "entity.name.method.js",
          "entity.name.class.js",
          "entity.name.tag.doctype",
          "entity.other.attribute-name",
          "entity.other.attribute-name.tag.jade",
          "entity.other.attribute-name.tag.pug",
          "keyword",
          "keyword.control",
          "keyword.operator.comparison",
          "keyword.control.flow.js",
          "keyword.control.flow.ts",
          "keyword.control.flow.tsx",
          "keyword.control.ruby",
          "keyword.control.module.ruby",
          "keyword.control.class.ruby",
          "keyword.control.def.ruby",
          "keyword.control.loop.js",
          "keyword.control.loop.ts",
          "keyword.control.import.js",
          "keyword.control.import.ts",
          "keyword.control.import.tsx",
          "keyword.control.from.js",
          "keyword.control.from.ts",
          "keyword.control.from.tsx",
          "keyword.operator.expression.delete",
          "keyword.operator.new",
          "keyword.operator.expression",
          "keyword.operator.cast",
          "keyword.operator.relational",
          "keyword.operator.sizeof",
          "keyword.operator.logical.python",
          "italic",
          "markup.italic",
          "markup.quote",
          "markup.changed",
          "markup.italic.markdown",
          "markup.quote.markdown",
          "markup.deleted.diff",
          "markup.inserted.diff",
          "meta.delimiter.period",
          "meta.diff.header.git",
          "meta.diff.header.from-file",
          "meta.diff.header.to-file",
          "meta.tag.sgml.doctype",
          "meta.var.expr",
          "meta.class meta.method.declaration meta.var.expr storage.type.js",
          "meta.decorator punctuation.decorator",
          "meta.selector",
          "punctuation.accessor",
          "punctuation.definition.comment",
          "punctuation.definition.template-expression.begin",
          "punctuation.definition.template-expression.end",
          "punctuation.section.embedded",
          "quote",
          "source.js constant.other.object.key.js string.unquoted.label.js",
          "source.go keyword.package.go",
          "source.go keyword.import.go",
          "source.go keyword.function.go",
          "source.go keyword.type.go",
          "source.go keyword.struct.go",
          "source.go keyword.interface.go",
          "source.go keyword.const.go",
          "source.go keyword.var.go",
          "source.go keyword.map.go",
          "source.go keyword.channel.go",
          "source.go keyword.control.go",
          "storage",
          "storage.type",
          "storage.modifier",
          "storage.type.property.js",
          "storage.type.property.ts",
          "storage.type.property.tsx",
          "tag.decorator.js entity.name.tag.js",
          "tag.decorator.js",
          "text.html.basic entity.other.attribute-name.html",
          "text.html.basic entity.other.attribute-name",
          "variable.language",
          "variable.other.object.property"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.suggestSelection": "first",
  "files.autoSave": "onFocusChange"
}
