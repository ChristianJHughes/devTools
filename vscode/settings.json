{
  // EDITOR APPEARANCE SETTINGS - WORKBENCH
  "workbench.statusBar.feedback.visible": false,
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": true,
  "workbench.panel.defaultLocation": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Tomorrow Night Blue",
  "workbench.list.multiSelectModifier": "ctrlCmd",
  "workbench.editor.highlightModifiedTabs": true,
  // EDITOR APPEARANCE SETTINGS - WINDOW
  "window.zoomLevel": 1,
  "window.openFilesInNewWindow": "on",
  "window.closeWhenEmpty": true,
  "window.restoreFullscreen": true,
  "window.restoreWindows": "all",
  // EDITOR APPEARANCE SETTINGS - EDITOR
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.scrollBeyondLastLine": false,
  "editor.wordWrap": "on",
  "editor.fontSize": 14,
  "editor.smoothScrolling": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.tabCompletion": "on",
  // EDITOR APPEARANCE SETTINGS - ICONS
  "material-icon-theme.activeIconPack": "angular",
  "material-icon-theme.hidesExplorerArrows": false,
  "material-icon-theme.folders.color": "#90a4ae",
  "material-icon-theme.opacity": 1,
  // FILE FORMATING SETTINGS
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "editor.formatOnPaste": true,
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  // SETTINGS SYNC SETTINGS
  "sync.gist": "a4bfc2a1ce736b5ee03cfd930deb0ea1",
  "sync.forceDownload": false,
  "sync.quietSync": false,
  "sync.askGistName": false,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  // GIT SETTINGS
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.defaultCloneDirectory": "~/dev/repos",
  "git.promptToSaveFilesBeforeCommit": true,
  "git.confirmSync": false,
  // TERMINAL SETTINGS
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.shellArgs.osx": [],
  "terminal.integrated.fontSize": 13,
  // PRETTIER SETTINGS
  "prettier.tabWidth": 2,
  "prettier.arrowParens": "always",
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,
  // STYLE LINTER SETTINGS: Stylelint Handles it
  "prettier.disableLanguages": ["vue", "scss", "css"],
  "scss.validate": false,
  "css.validate": false,
  "less.validate": false,
  // PLUGIN SETTINGS
  "indentRainbow.updateDelay": 10,
  "npm.enableScriptExplorer": true,
  "npm.packageManager": "yarn",
  "html-css-class-completion.includeGlobPattern": "**/*.{css,html,ftl,scss}",
  "color-highlight.matchWords": true,
  "yarn.runInTerminal": true,
  "emmet.includeLanguages": {
    "ftl": "html"
  },
  "optimizeImages.app": "imageOptim",
  "npm.scriptExplorerAction": "run",
  "explorer.confirmDragAndDrop": false,
  "eslint.packageManager": "yarn",
  "scss.scannerExclude": [
    "**/.git",
    "**/node_modules/!(gazelle-design-system)",
    "**/bower_components"
  ],
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "blade",
    "ejs",
    "jinja",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "plaintext",
    "markdown",
    "vue",
    "liquid",
    "erb",
    "lang-cfml",
    "cfml",
    "HTML (Eex)",
    "ftl"
  ],
  "markdown.extension.toc.updateOnSave": false,
  "workbench.colorCustomizations": {
    "terminal.background": "#001c40",
    "panel.border": "#001c40",
    "panel.background": "#001c40",
    "tab.activeBackground": "#143559",
    "editor.selectionBackground": "#006efeb6",
    "editor.selectionHighlightBackground": "#559fff45"
  },
  "breadcrumbs.enabled": true,
  "yaml.validate": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.host": "localhost",
  "githubPullRequests.hosts": [
    {
      "host": "https://github.com",
      "username": "oauth",
      "token": "system"
    }
  ],
  "search.location": "panel"
}
